        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Locator (Tango)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/l_go_tango"
        android:layout_below="@+id/l_go"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Navigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/n_go"
        android:layout_below="@+id/l_go_tango"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Admin Panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ap_go"
        android:layout_below="@+id/n_go"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

